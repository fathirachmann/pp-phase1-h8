<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit <%= product.dataValues.productName %></title>
</head>
<body>
    <%- include('partials/_header', {session: req.session}) %>

    <h1>Edit Product: <%= product.dataValues.name %></h1>
    <img src="<%= product.dataValues.imageUrl %>" alt="" style="width: 200px;">
    <form action="/products/<%= product.dataValues.id %>/edit" method="post">
        <label for="">Coffee Name</label>
        <input type="text" name="productName" id="" value="<%= product.dataValues.productName %>">
        <br>
        <label for="">Price</label>
        <input type="number" name="price" id="" value="<%= product.dataValues.price %>">
        <br>
        <label for="">Stock</label>
        <input type="number" name="stock" id="" value="<%= product.dataValues.stock %>">
        <br>
        <label for="">Image URL</label>
        <input type="text" name="imageUrl" id="" value="<%= product.dataValues.imageUrl %>">
        <br>
        <label for="">Bean Type</label>
        <select name="CategoryId" id="">
            <option value=""selected disabled> -- Select Bean Type</option>
            <% categoryData.forEach(el => { %>
                <option value="<%= el.id %>" <%= el.beanType === product.dataValues.Categories[0].beanType ? 'selected' : '' %>><%= el.beanType %></option>
            <% }) %>
        </select>
        <select name="CategoryId" id="">
            <option value=""selected disabled> -- Select Bean Type</option>
            <% categoryData.forEach(el => { %>
                <option value="<%= el.id %>" <%= el.beanType === product.dataValues.Categories[1].beanType ? 'selected' : ''%>><%= el.beanType %></option>
            <% }) %>
        </select>
        <br>
        <label for="">description</label>
        <textarea name="description" id=""><%= product.dataValues.description %></textarea>
        <br>
        <br>
        <input type="submit" value="Submit">
    </form>
    <a href="/products/<%= product.dataValues.id %>/delete">Delete?</a>
</body>
</html>